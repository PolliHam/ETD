<core:FragmentDefinition xmlns="sap.m" 
	xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>SPL_Create_Title}">
		<form:SimpleForm maxContainerCols="2">
            <Label text="{i18n>SPL_Create_Label}" >
			</Label>
			<Input placeholder="{i18n>SPL_Create_Placeholder}">
			</Input>
		</form:SimpleForm>
		<buttons>
			<Button text="{i18n>Snapshot_BUT_OK}" press="pressedOK" />
			<Button text="{i18n>Snapshot_BUT_Cancel}" press="pressedCancel" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>