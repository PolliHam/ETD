<core:FragmentDefinition xmlns="sap.ui.commons"	xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">

	<Dialog title="{i18n>BU_LBL_Description}" width="400px" height="300px" modal="true">
       <TextArea value="{path:'/description'}" width="100%" height="100%" maxLength="5000">
		   <layoutData>
		      <layout:ResponsiveFlowLayoutData weight="1"></layout:ResponsiveFlowLayoutData>
		   </layoutData>
       </TextArea>			   
		
		<buttons>
	       <Button text="{i18n>BU_BUT_OK}" press="closeDialog"/>
	       <Button text="{i18n>BU_BUT_Cancel}" press="cancelDialog"/>
        </buttons>    
	</Dialog>
	
</core:FragmentDefinition>